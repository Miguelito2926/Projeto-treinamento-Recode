@model Florent_Viagens.Models.DataViagem

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row text-center">
    <div class="container-fluid col-md-5 mt-5 card bg-success " style="border-radius: 25px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label text-white"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label text-white"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DestinoId" class="control-label text-white"></label>
                <select asp-for="DestinoId" class ="form-control" asp-items="ViewBag.DestinoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="OK" class="btn btn-light text-success" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a class="text-white btn btn-success" asp-action="Index">Data da Viagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
