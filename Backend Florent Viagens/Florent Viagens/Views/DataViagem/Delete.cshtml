@model Florent_Viagens.Models.DataViagem

@{
    ViewData["Title"] = "Delete";
}


<h3 class="text-success">Tem certeza que deseja deletar?</h3>

<div class="container-fluid">
    <h4 class="text-success text-center mt-4">Informações da Viagem</h4>   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-success">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10  text-success">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2 text-success">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10 text-success">
            @Html.DisplayFor(model => model.Usuario.Cpf)
        </dd class>
        <dt class = "col-sm-2 text-success">
            @Html.DisplayNameFor(model => model.Destino)
        </dt>
        <dd class = "col-sm-10 text-success">
            @Html.DisplayFor(model => model.Destino.Descricao)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="text-white  btn btn-danger" asp-action="Index">Voltar</a>
    </form>
</div>
