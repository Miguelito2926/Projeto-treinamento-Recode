@model Florent_Viagens.Models.DataViagem

@{
    ViewData["Title"] = "Edit";
}


<hr />
<div class="row  text-center">
    <div class="container-fluid col-md-4 text-center card bg-success " style="border-radius: 25px;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Data" class="control-label text-white"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label text-white"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinoId" class="control-label text-white"></label>
                <select asp-for="DestinoId" class="form-control" asp-items="ViewBag.DestinoId"></select>
                <span asp-validation-for="DestinoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a class="text-white btn btn-success" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
