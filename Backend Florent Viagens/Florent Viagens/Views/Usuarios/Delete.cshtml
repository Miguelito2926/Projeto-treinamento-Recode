@model Florent_Viagens.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}



<h3 class="text-success">Tem certeza que deseja deletar?</h3>

<div class="container-fluid">
    <h4 class="text-success text-center mt-4">Informações do usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-success">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10  text-success">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2 text-success">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10  text-success">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2  text-success">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class = "col-sm-10  text-success">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="text-white  btn btn-danger" asp-action="Index">Voltar</a>
    </form>
</div>
