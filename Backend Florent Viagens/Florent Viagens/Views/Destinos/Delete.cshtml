@model Florent_Viagens.Models.Destino

@{
    ViewData["Title"] = "Delete";
}

<h3 class="text-success">Tem certeza que deseja deletar?</h3>


<div class="container-fluid">
    <h4 class="text-success text-center mt-4">Informações do destino</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-success">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10 text-success">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="text-white  btn btn-danger"  asp-action="Index">Voltar</a>
    </form>
</div>
